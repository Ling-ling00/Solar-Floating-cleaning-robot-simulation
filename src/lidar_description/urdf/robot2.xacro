<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="robot">

    <xacro:include filename="gazebo2.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <link name="dummy"/>

    <joint type="fixed" name="dummy">
        <parent link="dummy"/>
        <child link="base_link"/>
        <origin xyz="0 0 0.305" rpy="0 0 0" />
