<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="dummy">

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <xacro:include filename="gazebo.xacro"/>
    <link name="world"></link>

    <link name="link_0">
        <visual>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_0.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_0.stl"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="base_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="world"/>
        <child link="link_0"/>        
    </joint>

    <link name="link_1">
        <visual>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_1.stl"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_1.stl"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="joint_1" type="revolute">
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit 
            effort="1000.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="1000.0"
            />
        <parent link="link_0"/>
        <child link="link_1"/>
        <origin xyz="0 0 0.2"/>
    </joint>

    <link name="link_2">
        <visual>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_2.stl"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_2.stl"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="joint_2" type="revolute">
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit 
            effort="1000.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="1000.0"
            />    
        <parent link="link_1"/>
        <child link="link_2"/>
        <origin rpy="-1.57075 -1.57075 0" xyz="0 -0.12 0"/>
    </joint>

    <link name="link_3">
        <visual>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_3.stl"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/link_3.stl"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="joint_3" type="revolute">
        <axis rpy="0 0 0" xyz="0 0 1"/>
        <limit 
            effort="1000.0" 
            lower="-3.14159265359" 
            upper="3.14159265359" 
            velocity="1000.0"
            />    
        <parent link="link_2"/>
        <child link="link_3"/>
        <origin rpy="0 0 0" xyz="0.25 0 0.1"/>
    </joint>

    <link name="end_effector">
        <visual>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/end_effector.stl"/>
            </geometry>
            <origin rpy="0 0 0" xyz="0 0 0"/>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <mesh filename = "file:///$(find watertest_description)/meshes/end_effector.stl"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="10.5" x="0.3" y="0.3" z="0.15">
            <origin xyz="0.15 0 0.075" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <joint name="link_3_to_e" type="fixed">
        <parent link="link_3"/>
        <child link="end_effector"/>
        <origin rpy="1.57075 0 1.57075" xyz="0.28 0 0"/>
    </joint>    

</robot>
